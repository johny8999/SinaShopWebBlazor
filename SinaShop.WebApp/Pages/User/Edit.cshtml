@page "/{Culture}/User/Edit"
@model SinaShop.WebApp.Pages.User.EditModel
@{
    Layout = "~/Pages/Shared/_MainLayout.cshtml";
}

<div class="row">
    <div class="col-sm-9" id="content">
        <h2 class="title">My Account</h2>
        <form id="FrmEdit">
         <input asp-for="input.UserId" class="form-control" type="hidden" />
            @Html.AntiForgeryToken()
            <div class="row customer-login">
                <div class="well">
                    <h2><i class="fa fa-file-text-o" aria-hidden="true"></i> Returning Customer</h2>
                    <p><strong>I am a returning customer</strong></p>
                    <div class="form-group">
                        <label class="control-label " asp-for="input.Email"></label>
                        <input asp-for="input.Email"  class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for=input.FullName></label>
                        <input asp-for="input.FullName" class="form-control" />
                    </div>
                    
                    <div class="form-group">
                        <label class="control-label" asp-for=input.PhoneNumber></label>
                        <input asp-for="input.PhoneNumber" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label class="control-label" asp-for=input.UserName></label>
                        <input asp-for="input.UserName" class="form-control"  />
                    </div>

                </div>
                <div class="bottom-form">
                    <a href="/@CultureInfo.CurrentCulture.Parent.Name/Auth/ForgetPassword" class="forgot">@Localizer["ForgetPassword"]</a>
                    <button type="button" onclick="SendForm('/@CultureInfo.CurrentCulture.Parent.Name/User/Edit','FrmEdit')" class="btn btn-default pull-right">@Localizer["LogIn"]</button>
                </div>
            </div>
        </form>
    </div>
</div>
