@page "/{culture}/Auth/Register"
@model SinaShop.WebApp.Pages.Auth.Register.RegisterModel
@{
    ViewData["Title"] = Localizer["Register"];
    Layout = "~/Pages/Shared/_MainLayout.cshtml";
}

<div class="main-container container">
    <ul class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li><a href="/@CultureInfo.CurrentCulture.Parent.Name/Auth/Register">@ViewData["Title"]</a></li>
    </ul>

    <div class="row">
        <div id="content" class="col-sm-12">
            <h2 class="title">@Localizer["Register"]</h2>
            <p>@Html.Raw( @Localizer["If you already have an account with us, please click",$"/{CultureInfo.CurrentCulture.Parent.Name}/Auth/Login"])</p>
            <form class="form-horizontal account-register clearfix">
                <fieldset id="account">
                    <div class="form-group required">

                        <label class="col-sm-2 control-label" asp-for="Input.FullName"></label>
                        <div class="col-sm-10">
                            <input asp-for="Input.FullName" class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.Email"></label>
                        <div class="col-sm-10">
                            <input asp-for="Input.Email" class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.Password"></label>
                        <div class="col-sm-10">
                            <input asp-for="Input.Password" class="form-control">
                        </div>
                    </div>
                    <div class="form-group required">
                        <label class="col-sm-2 control-label" asp-for="Input.RetypePassword"></label>
                        <div class="col-sm-10">
                            <input asp-for="Input.RetypePassword" class="form-control">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>

                        <div class="col-sm-10">
                            @Html.Raw(Localizer["IReadTerm",$"/{CultureInfo.CurrentCulture.Parent.Name}/Page/Terms"])
                            <input asp-for="Input.IAgree" class="box-checkbox"> &nbsp;
                        </div>
                    </div>
                </fieldset>
                <div class="buttons">
                    <div>
                        <button onclick="" type="button" class="btn btn-primary">@Localizer["Register"]</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
